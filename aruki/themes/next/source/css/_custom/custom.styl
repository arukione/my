// Custom styles.背景颜色
body{   
        background:url(https://www.arukione.com/images/background.png);
        background-size:cover;
        background-repeat:no-repeat;
        background-attachment:fixed;
        background-position:center;
     }

.content {
     border-radius: 50px;
     margin-top: 20px;
}

//侧边栏颜色背景
#sidebar {
            background: skyblue ;
            background-size: cover;
            background-position:center;
            background-repeat:no-repeat;
            p,a,span,i,div{
               color: black;
            }
            opacity: 0.7;
}



#posts code {color: black;background-color:skyblue;}

a.brand {
     background-color: skyblue;
     color:#3a74d1;
     border-radius: 10px;
}

